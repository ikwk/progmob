<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bekron"
    android:id="@+id/consrwtrgs"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_skp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:id="@+id/gambarskp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/judulSkp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="File SKP"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="5pt"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toEndOf="@+id/gambarskp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/txtPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="14 November"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/gambarskp"
        app:layout_constraintTop_toBottomOf="@+id/judulSkp"
        android:layout_marginLeft="10dp" />


    <TextView
        android:id="@+id/postby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="post by : Widnyana"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/txtPostDate"
        app:layout_constraintTop_toBottomOf="@+id/txtPostDate"
        android:layout_marginLeft="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>